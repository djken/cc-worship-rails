<p id="notice"><%= notice %></p>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h2>Groups</h2>
            <hr>
            <hr>
        </div>
        <% @groups.each do |g| %>
            <div class="col-lg-6 col-md-12 d-inline-block">
            <div class="">
                <label class="pr-2">Name: </label><a href=""><%= g.name[0..10] %></a>
            </div>
            <div class="">
                <label class="pr-2">Location : </label><%= g.location[0..10] %>
            </div>
            <div class="">
                <label for="" class="pr-2">Description : </label><%= g.info[0..10] %>...
            </div>
        
            <%= link_to 'Show', g %>
            <%= link_to 'Destroy', g, method: :delete, data: { confirm: 'Are you sure?' } %>
            <hr>    
        </div>         
         <% end %>
    </div>
    <%= link_to 'New Group', new_group_path %>
    </div>
</div>


